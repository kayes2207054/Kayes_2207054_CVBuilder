<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example._207054_project.CreateCVController">

    <top>
        <Label text="Create Your CV" styleClass="title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <GridPane hgap="10" vgap="12" padding="20">
            <columnConstraints>
                <ColumnConstraints minWidth="150"/>
                <ColumnConstraints minWidth="300"/>
            </columnConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="address" prefRowCount="2" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Education:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="education" prefRowCount="3" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Skills:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="skills" prefRowCount="3" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Work Experience:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="experience" prefRowCount="3" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Projects:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextArea fx:id="projects" prefRowCount="3" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" padding="20">
            <Button text="Generate CV" onAction="#generateCV"/>
        </HBox>
    </bottom>

</BorderPane>
