<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.imrul.cvbuilder.controllers.CreateCVController"
            styleClass="root" stylesheets="@../css/styles.css">

    <top>
        <VBox styleClass="header" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Create Your CV" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
            <Label text="Fill in the form below to generate your professional CV" styleClass="page-subtitle">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="form-scroll">
            <VBox spacing="25" styleClass="form-container">
                <padding>
                    <Insets top="30" right="50" bottom="30" left="50"/>
                </padding>

                <!-- Personal Information Section -->
                <VBox spacing="15" styleClass="section">
                    <Label text="Personal Information" styleClass="section-header">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                    <Separator/>

                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Full Name:*" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="field-label"/>
                        <TextField fx:id="fullNameField" promptText="Enter your full name" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="input-field"/>

                        <Label text="Email Address:*" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="field-label"/>
                        <TextField fx:id="emailField" promptText="example@email.com" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="input-field"/>

                        <Label text="Phone Number:*" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="field-label"/>
                        <TextField fx:id="phoneField" promptText="+1234567890" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="input-field"/>

                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="field-label"/>
                        <TextField fx:id="addressField" promptText="City, Country" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="input-field"/>
                    </GridPane>
                </VBox>

                <!-- Education Section -->
                <VBox spacing="15" styleClass="section">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Education" styleClass="section-header">
                            <font>
                                <Font name="System Bold" size="20"/>
                            </font>
                        </Label>
                        <Button text="+ Add Education" onAction="#handleAddEducation" styleClass="add-button"/>
                    </HBox>
                    <Separator/>

                    <VBox fx:id="educationContainer" spacing="10"/>
                </VBox>

                <!-- Skills Section -->
                <VBox spacing="15" styleClass="section">
                    <Label text="Skills" styleClass="section-header">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                    <Separator/>

                    <TextArea fx:id="skillsArea" promptText="Enter your skills (comma-separated, e.g., Java, Python, SQL)"
                              wrapText="true" prefRowCount="3" styleClass="input-field"/>
                </VBox>

                <!-- Work Experience Section -->
                <VBox spacing="15" styleClass="section">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Work Experience" styleClass="section-header">
                            <font>
                                <Font name="System Bold" size="20"/>
                            </font>
                        </Label>
                        <Button text="+ Add Experience" onAction="#handleAddWorkExperience" styleClass="add-button"/>
                    </HBox>
                    <Separator/>

                    <VBox fx:id="workExperienceContainer" spacing="10"/>
                </VBox>

                <!-- Projects Section -->
                <VBox spacing="15" styleClass="section">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Projects" styleClass="section-header">
                            <font>
                                <Font name="System Bold" size="20"/>
                            </font>
                        </Label>
                        <Button text="+ Add Project" onAction="#handleAddProject" styleClass="add-button"/>
                    </HBox>
                    <Separator/>

                    <VBox fx:id="projectsContainer" spacing="10"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="button-bar">
            <padding>
                <Insets top="20" right="50" bottom="20" left="50"/>
            </padding>
            <Button text="Back to Home" onAction="#handleBackToHome" styleClass="secondary-button">
                <font>
                    <Font size="14"/>
                </font>
            </Button>
            <Button text="Generate CV" onAction="#handleGenerateCV" styleClass="primary-button">
                <font>
                    <Font size="14"/>
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
